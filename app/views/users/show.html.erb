<h1>User info</h1>

<div class="profile-name">
 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
 <p>name:<%= @user.name %></p>
 <p>introduction:<%= @user.introduction_id %></p> 
 <% if @user.id == current_user.id %>
  <p><%= link_to"プロフィール編集", edit_user_path(@user) %></p>
  <% else %>
  <p><%= link_to"プロフィール編集",user_path(current_user) %></p>
 <% end %>
</div>
<!--ユーザー情報-->

<h1>New book</h1>
  <%= form_with model: @book,local: true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
  
   <h4>Opinion</h4>
   <%= f.text_area :body %>
  
   <%= f.submit"Create Book" %>
  <% end %>
<!--新規投稿フォーム-->

<h1>Bookes</h1>
<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
    </thead>
<% @books.each do |book| %>

<tbody>
 <tr>
  <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %></td>
  <td><%= link_to book.title,book_path(book.id) %></td>
  <td><%= book.body %></td>
 </tr>
</tbody>
<% end %>
</table>