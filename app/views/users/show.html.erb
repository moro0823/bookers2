<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "books/list",user:@user %>
    </div>

   <div class="col-lg-9">
    <h1>Bookes</h1>
    <table class="table">
      <thead>
       <tr>
        <% if @user != current_user %>
        <th scope="col"></th>
        <% end %>
        <th scope="col">Title</th>
        <th scope="col">Opinion</th>
       </tr>
      </thead>
      
   <% @books.each do |book| %>
     <tbody>
      <tr>
       <% if @user != current_user %>
        <th scope="row"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %></th>
       <% end %>
       <td><%= link_to book.title,book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
 </div>
</div>