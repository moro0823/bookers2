<div class = "container">
    <div class = "row" >

    <div class="col-md-8 offset-md-1" style="margin-top:25px;">
     <h1>検索結果</h1>
    <table class="table">
      <tbody>
        <% if @range == "User" %>
      <thead>
       <th scope="col">image</th>
       <th scope="col">name</th>
       <th scope="col">opinion</th>
      </thead>
        <% @users.each do |user| %>
        <th scope="row"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %></th>
        <td><%= user.name %></td>
       </tbody>
       <% end %>
      </table>
      </div>
    </div>
</div>



<% else %>
     <thead>
      <tr>
       <th scope="col">title</th>
       <th scope="col">body</th>
       <th scope="col"></th>
      </tr>
      </thead>
      <tbody>
        <% if @range == "Book" %>
        <% @books.each do |book| %>
     <td><%= book.title %></td>
     <td> <%= book.body %></td>
       </tbody>
       <% end %>
      </table>
    <% end %>
<% end %>
