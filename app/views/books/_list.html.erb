<% if flash[:notice] %>
  <p id="notice">
   <%="Welcome! You have "+ flash[:notice] %>
  </p>
 <% end %>

<h1>User info</h1>

<div class="profile-name">
 <div class="profile-image" style="padding:10px;">
   <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
 </div>
 <div class="border-top" style="padding:10px;">
  <p>name <%= user.name %></p>
 </div>
 <div class="border-top" style="padding:10px;">
   <p>introduction <%= user.introduction %></p> 
 </div>
 <% if user.id == current_user.id %>
  <%= link_to edit_user_path(user),class: "btn btn-danger text-white", method: :get do %>
   <i class="fas fa-user-cog"></i>
   <% end %>
  <% else %>
  <%= link_to user_path(current_user),class: "btn btn-danger text-white", method: :get do %>
   <i class="fas fa-user-cog"></i>
   <% end %>
 <% end %>
</div>
<!--ユーザー情報-->

<% if @book.errors.any? %>
