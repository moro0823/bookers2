<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
 <%= @book.errors.full_messages.each do |message| %>
    <% end %>
   <% end %>
   
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
<h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit"Update Book" %>

 <%= link_to"Show",book_path(@book.id) %>
 <%= link_to"Back",books_path %>
 
<% end %>