
<h1>New book</h1>
  <%= form_with model: @book,local: true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
  
   <h4>Opinion</h4>
   <%= f.text_area :body %>
  
   <%= f.submit"Create Book" %>
  <% end %>
<!--新規投稿フォーム-->




<h1>Bookes</h1>

<% @books.each do |book| %>
<p>Title</p>
<span><%= link_to book.title,book_path(book.id) %></span>

<p>Opinion</p>
<span><%= book.body %></span>
<% end %>
<!--投稿一覧画面-->