<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "books/list",user:@user %>
    </div>
<div class="col-md-8 offset-md-1">
  <h1>Bookes</h1>
 <table class="table">
  <thead>
   <tr>
    <th scope="col">User</th>
    <th scope="col">Title</th>
     <th scope="col">Opinion</th>
     <th scope="col">いいね</th>
     <th scope="col">コメント数</th>
    </tr>
   </thead>

<% @books.each do |book| %>
    <tbody>
     <tr>
      <th scope="row">
       <%=link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user,:profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %></th>
        <% end %>
      <td><%= link_to book.title,book_path(book.id) %></td>
　　  <td><%= book.body %></td>

　　　<!--部分的に更新したい場所-->


       <td id="book_<%= book.id %>">
         <%= render 'favorites/favorite-btn', book: book %>
      </td>

      <td>
       <%= link_to "#{book.post_comments.count}コメント",book_path(book.id) %>
      </td>
     </tr>
    </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>
